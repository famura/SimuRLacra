<mujoco model="inverted pendulum">
	<compiler texturedir="[ASSETS_DIR]/textures" />
	<option gravity="0 0 -[g]" integrator="RK4" timestep="0.0005" />
	<size nstack="10000" />
	<default>
		<geom contype="0" />
	</default>
	<visual>
	</visual>
	<visual>
		<rgba fog="1 1 1 1" />
		<map znear="0.02" fogstart="1" fogend="3" />
		<quality shadowsize="4096" />
	</visual>
	<asset>
		<texture name="floor" type="2d" file="IAS_floor_fine.png" />
		<texture name="qube" file="qqube.png" gridsize="3 4" gridlayout=".U..BFRL.D.." />
		<material name="floor" rgba="0.8 0.9 0.8 1" reflectance="0.1" texture="floor" texrepeat="10 10" />
		<material name="qube" reflectance="0.7" texture="qube" />
		<material name="link" rgba="0.75 0.75 0.75 1" reflectance="0.9" />
		<material name="pole" rgba="1 0 0 1" reflectance="0.9" />
	</asset>
	<worldbody>
		<light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.3" directional="true" exponent="1" pos="0 0 1.3" specular=".1 .1 .1"/>
		<geom name="ground" type="plane" pos="0 0 0" size="10 10 0.1" material="floor" />
		<geom name="cube" type="box" size="0.05 0.06 0.05" pos="0 0 0.06" euler="90 90 0" material="qube" />
		<geom name="upLink" type="cylinder" fromto="0 0 0.12 0 0 0.13" size="0.003" material="link" mass="0" />
		<geom name="mount" type="cylinder" fromto="0 0 0.12 0 0 0.1225" size="0.0075" material="qube" mass="0" />
		<body>
			<joint name="theta" type="hinge" pos="0 0 0.13" axis="0 0 1" damping="[Dr]" frictionloss="0" />
			<geom name="rotaryArm" type="cylinder" fromto="0 0 0.13 [Lr] 0 0.13" size="0.003" material="link" mass="[Mr]" />
			<geom name="rotaryArmExtension" type="cylinder" fromto="[Lr] 0 0.13 [0.0055+Lr] 0 0.13" size="0.003" material="link" mass="0" />
			<geom name="sensor" type="cylinder" fromto="-0.012 0 0.13 0.012 0 0.13" size="0.0065" material="link" mass="0" />
			<body>
				<joint name="alpha" type="hinge" pos="[Lr] 0 0.13" axis="1 0 0" damping="[Dp]" frictionloss="0" />
				<geom name="pole" type="capsule" fromto="[Lr] 0 0.13 [Lr] 0 [0.13-Lp]" size="0.004" material="pole" mass="[Mp]" />
				<geom name="poleExtension" type="cylinder" fromto="[Lr] 0 0.13 [Lr] 0 0.135" size="0.004" material="pole" mass="0" />
			</body>
		</body>
	</worldbody>
	<actuator>
		<motor name="motor" joint="theta" />
	</actuator>
</mujoco>
