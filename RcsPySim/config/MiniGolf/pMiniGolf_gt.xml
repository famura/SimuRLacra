<content>

  <vortex_parameters integrator_dt="0.002"
                     body_linear_damping="0.00001"
                     body_angular_damping="0.00001"
                     joint_lock_stiffness="100000.0"
                     joint_lock_damping="5000000.0"
  />

  <bullet_parameters use_ground_plane="false"
                     use_mclp_solver="false"
                     body_linear_damping="0.0"
                     body_angular_damping="0.0"
                     convex_hull_vertex_limit="140"
                     jointed_body_linear_damping="0"
                     jointed_body_angular_damping="0"
  />

  <!-- Definition of available materials (in addition to "default") -->
  <!-- ==================================================================== -->
  <!-- Possible friction models are "Box", "ScaledBox", and "ScaledBoxFast" -->
  <!-- Here is what you can set: -->
  <!--
  <material name="default"
            friction_model="ScaledBox"
            friction_coefficient="0.8"
            static_friction_scale="1.5"
            slip="0.01"
            integrated_slip_displacement="true"  actually its set to neural
            compliance="0.0"
            damping="0.0"
            restitution_threshold="0.0"
            adhesive_force="0.0"
  />
  -->

  <material name="default"
            friction_model="ScaledBox"
            friction_coefficient="0.8"
            rolling_friction_coefficient="0.0"
            static_friction_scale="1.0"
            slip="0.0001"
            integrated_slip_displacement="true"
            compliance="0"
            restitution="1.0"
  /> <!-- NOTE: the default restitution is usually 0. Here we can use the default material directly since it is the only one interacting with the ball. -->
  <material name="ball_mat"
            friction_model="ScaledBox"
            friction_coefficient="0.4198"
            rolling_friction_coefficient="0.000005"
            static_friction_scale="1.0"
            slip="0.001"
            integrated_slip_displacement="true"
            compliance="0.00001"
            restitution="0.1376"
  />
  <material name="ground_mat"
            friction_model="ScaledBox"
            friction_coefficient="0.2127"
            rolling_friction_coefficient="0.0"
            static_friction_scale="1.0"
            slip="0.0001"
            integrated_slip_displacement="true"
            compliance="0.00001"
            restitution="0"
  />
  <material name="hole_mat"
            friction_model="ScaledBox"
            friction_coefficient="10.0"
            rolling_friction_coefficient="10.0"
            static_friction_scale="10.0"
            slip="0.0"
            integrated_slip_displacement="true"
            compliance="0.1"
            restitution="0"
  />

</content>
